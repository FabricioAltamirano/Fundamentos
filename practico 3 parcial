#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
float distancia(float x1,float x2,float y1, float y2);
void main(){
	float x1,x2,y1,y2,d;
	cout<<"ingrese el valor de x1: ";
	cin>>x1;
	cout<<"ingrese el valor de y1: ";
	cin>>y1;
	cout<<"ingrese el valor de x2: ";
	cin>>x2;
	cout<<"ingrese el valor de y2: ";
	cin>>y2;
	d=distancia(x1, x2, y1, y2);
	cout<<"la distancia entre los dos puntos es: " <<d<<endl;
	getch();
}
float distancia(float x1,float x2,float y1, float y2)
{float d;
d=sqrt((pow((x1-x2),2))+(pow((y1-y2),2)));
	return d;
}
